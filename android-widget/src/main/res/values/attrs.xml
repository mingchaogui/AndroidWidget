<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LetterSpacingTextView">
        <attr name="letterSpacing" format="float"/>
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="MsEditText">
        <attr name="showClear" format="boolean"/>
        <!-- 清除按钮的图标 -->
        <attr name="clearIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="pin_length" format="integer"/>
        <attr name="pin_title_text" format="string"/>
        <attr name="pin_title_text_color" format="reference"/>
        <attr name="pin_text_background" format="reference"/>
        <attr name="pin_text_color" format="reference"/>
        <attr name="pin_button_background" format="reference"/>
        <attr name="pin_button_text_color" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="pbtn_text" format="string"/>
        <attr name="pbtn_loading_text" format="string"/>
        <attr name="pbtn_text_size" format="dimension"/>
        <attr name="pbtn_text_color" format="color|reference"/>
        <attr name="pbtn_progress_color" format="color|reference"/>
    </declare-styleable>
</resources>