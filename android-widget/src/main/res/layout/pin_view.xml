<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pin_vertical_padding"
        android:layout_marginBottom="@dimen/pin_vertical_padding"
        android:layout_marginLeft="@dimen/pin_horizontal_padding"
        android:layout_marginRight="@dimen/pin_horizontal_padding"
        android:textSize="@dimen/primary_desc_text_size"
        tools:textColor="@color/pin_text_color"
        tools:text="@string/pin_title"/>

    <com.mingchaogui.widget.LetterSpacingTextView
        android:id="@+id/txt_pin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/pin_horizontal_padding"
        android:layout_marginRight="@dimen/pin_horizontal_padding"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="24dp"
        app:letterSpacing="12"
        tools:textColor="@android:color/primary_text_light"
        tools:text="0000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pin_vertical_padding"
        android:layout_marginBottom="@dimen/pin_vertical_padding"
        android:layout_marginLeft="@dimen/pin_horizontal_padding"
        android:layout_marginRight="@dimen/pin_horizontal_padding"
        android:overScrollMode="never"
        android:scrollbars="none"/>

</merge>